cabal-version:       2.4
name:                haskell-editor-setup
version:             0.1.0.0
synopsis:            GUI program that will set up Haskell environment with target selected editors or IDEs
license:             GPL-3.0-only
license-file:        LICENSE
author:              RÄƒzvan Flavius Panda
maintainer:          razvan.panda@gmail.com
category:            Development
extra-source-files:  CONTRIBUTORS.md, CHANGELOG.md, README.md

executable haskell-editor-setup
  main-is:             Main.hs
  build-depends:       base               ^>= 4.12.0.0
                     , miso               == 1.5.0.0
                     , jsaddle-warp       == 0.9.6.0
                     , jsaddle-webkit2gtk == 0.9.6.0
                     , ghcjs-dom          == 0.9.4.0
                     , websockets         == 0.12.5.3
                     , directory          == 1.3.3.0
                     , text               == 1.2.3.1
                     , turtle             == 1.5.14
                     , lens               == 4.17.1

  other-modules:       OS.Linux.NixOS
                       OS.Linux.Debian

  hs-source-dirs:      src

  default-extensions:  OverloadedStrings
                     , RecordWildCards
                     , NoImplicitPrelude

  default-language:    Haskell2010

  ghc-options: -threaded -Wall
